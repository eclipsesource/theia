// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch VS Code",
      "type": "extensionHost",
      "request": "launch",

      "args": [
        "${workspaceFolder}/workspace/",
        "--extensionDevelopmentPath=${workspaceFolder}/performance-test-plugin"
      ],
      "outFiles": ["${workspaceFolder}/performance-test-plugin/out/**/*.js"],
      "env": {
        "PERFORMANCE_TEST_ENV": "vscode"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Theia Browser Backend",
      "args": [
        "${workspaceRoot}/browser-app/src-gen/backend/main.js",
        "${workspaceRoot}/workspace",
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--hosted-plugin-inspect=9339",
        "--plugins=local-dir:${workspaceRoot}/plugins"
      ],
      "runtimeArgs": ["--preserve-symlinks"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps",
        "NODE_ENV": "development",
        "THEIA_DEFAULT_PLUGINS": "local-dir:${workspaceRoot}/browser-app/plugins",
        "PERFORMANCE_TEST_ENV": "theia-browser"
      },
      "outFiles": [
        "${workspaceFolder}/performance-test-extension/lib/**/*.js",
        "${workspaceFolder}/node_modules/@theia/*/lib/**/*.js",

      ],
      "preLaunchTask": "Prepare Browser Start"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Theia Electron Backend",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "program": "${workspaceRoot}/electron-app/src-gen/frontend/electron-main.js",
      "protocol": "inspector",
      "args": [
        "${workspaceRoot}/workspace",
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--hosted-plugin-inspect=9339",
        "--remote-debugging-port=9222",
        "--no-app-auto-install",
        "--app-project-path=${workspaceRoot}/electron-app",
        "--plugins=local-dir:${workspaceRoot}/plugins"
      ],
      "env": {
        "NODE_ENV": "development",
        "PERFORMANCE_TEST_ENV": "theia-electron"
      },
      "outFiles": ["${workspaceFolder}/performance-test-extension/lib/**/*.js"],
      "preLaunchTask": "Prepare Electron Start"
    }
  ]
}
